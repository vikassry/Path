<project name="Path" basedir="./" default="runTest">
    <property name="src" value="./"/>
    <property name="build.dir"   value="./"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="jar.dir"     value="${build.dir}/jar"/>

    <target name="clean">
        <delete dir="${build.dir}/classes"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src}" destdir="${classes.dir}"
            classpath="./junit-4.10.jar"
            includeantruntime="yes"   
        />
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="jar" value="${runtest}"/>
            </manifest>
        </jar>
    </target>

    <target name="runTest" depends="compile,jar">
        <echo> runing test...........</echo>
        <java classpath="${classes.dir};./junit-4.10.jar" classname="org.junit.runner.JUnitCore">
          <arg value="PathsTest"/>
        </java>
    </target>
</project>